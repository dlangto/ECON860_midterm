import json
import pandas
import os
import glob

if not os.path.exists("parsed_files"):
  os.mkdir("parsed_files")


dataset = pandas.DataFrame()

for json_file_name in glob.glob("json_files/*.json"):
  # json_file_name = "json_files/dAAAb.json"

  f = open(json_file_name, "r")
  json_data = json.load(f)
  f.close()

  # print(json_data)

  avatar_url = json_data['avatar_url']
  url = json_data['url']
  starred_url = json_data['starred_url']
  following = json_data['following']
  name = json_data['name']
  company = json_data['company']
  blog = json_data['blog']
  location = json_data['location']
  email = json_data['email']
  hireable = json_data['hireable']
  bio = json_data['bio']
  created_at = json_data['created_at']
  updated_at = json_data['updated_at']




  print(avatar_url)
  print(url)
  print(starred_url)
  print(following)
  print(name)
  print(company)
  print(blog)
  print(location)
  print(email)
  print(hireable)
  print(bio)
  print(created_at)
  print(updated_at)

  row = pandas.DataFrame.from_records([{
        'avatar_url': avatar_url,
        'url': url,
        'starred_url': updated_at,
        'following': following,
        'name': name,
        'company': company,
        'blog': blog,
        'location': location,
        'email': email,
        'hireable': hireable,
        'bio': bio,
        'created_at': created_at,
        'updated_at': updated_at

      }])

  print(row)
  dataset = pandas.concat([dataset, row])



dataset.to_csv("parsed_files/github_user_data.csv"
                , index=False)